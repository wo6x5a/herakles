<configuration>
	<contextName>herakles</contextName>

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date %level [%thread] [user: %X{userName:-unknown}] %logger{55} - %msg%n</pattern>
		</encoder>
	</appender>

	<property name="LOG_HOME" value="E:\\herakles\\log" />
	<appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LOG_HOME}/herakles.%d{yyyy-MM-dd}.log</FileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>30</maxIndex>
			<MaxHistory>30</MaxHistory>
			<timeBasedFileNamingAndTriggeringPolicy  
			     class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">  
			     <maxFileSize>10MB</maxFileSize>  
			</timeBasedFileNamingAndTriggeringPolicy> 
		</rollingPolicy>
		<encoder>
			<pattern>%date %level [%thread] [user: %X{userName:-unknown}] %logger{55} - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="mongo" class="com.lcw.herakles.platform.common.logback.appender.MongoDBAppender">
		<host>127.0.0.1</host>
		<port>27017</port>
		<db>herakles</db>
	</appender>

	<logger name="org.mongodb" level="info" />
	<logger name="org.apache.shiro" level="info" />
	<logger name="org.springframework" level="info" />

	<root level="debug">
		<appender-ref ref="console" />
		<appender-ref ref="file" />
		<appender-ref ref="mongo" />
	</root>
</configuration>
