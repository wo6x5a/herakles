<configuration>
	<contextName>herakles</contextName>

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date %level [%thread] [user: %X{userName:-unknown}] %logger{55} - %msg%n</pattern>
		</encoder>
	</appender>

	<property name="LOG_HOME" value="E:\\herakles\\log" />
	<!-- 按日期和大小区分的滚动日志 -->
	<appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_HOME}/herakles.log</file>

		<encoder>
		    <pattern>%date %level [%thread] [user: %X{userName:-unknown}] %logger{55} - %msg%n</pattern>
		</encoder>

		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${LOG_HOME}/herakles.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy  class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
			<!-- or whenever the file size reaches 100MB -->
			<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>

	</appender>

	<appender name="mongo" class="com.lcw.herakles.platform.common.logback.appender.MongoDBAppender">
		<host>127.0.0.1</host>
		<port>27017</port>
		<db>herakles</db>
	</appender>

	<logger name="org.mongodb" level="info" />
	<logger name="org.apache.shiro" level="info" />
	<logger name="org.apache.velocity" level="info" />
	<logger name="org.springframework" level="info" />

	<root level="debug">
		<appender-ref ref="console" />
		<appender-ref ref="file" />
		<appender-ref ref="mongo" />
	</root>
</configuration>
